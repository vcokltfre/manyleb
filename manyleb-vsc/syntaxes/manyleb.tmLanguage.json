{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "manyleb",
  "scopeName": "source.manyleb",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#http-verbs" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#types" },
    { "include": "#arrays" },
    { "include": "#mappings" },
    { "include": "#optional" },
    { "include": "#routes" },
    { "include": "#identifiers" },
    { "include": "#braces" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.manyleb",
          "match": "//.*$"
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.manyleb",
          "match": "\\b(version|title|description|object|prop|route|body|response|tag|param|query)\\b"
        }
      ]
    },

    "http-verbs": {
      "patterns": [
        {
          "name": "keyword.other.http.manyleb",
          "match": "\\b(get|post|put|patch|delete|options|head)\\b"
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.manyleb",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.manyleb",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.manyleb",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.manyleb",
          "match": "\\b(string|str|integer|int|boolean|bool|float|null)\\b"
        },
        {
          "name": "entity.name.type.manyleb",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },

    "arrays": {
      "patterns": [
        {
          "name": "meta.type.array.manyleb",
          "match": "\\[\\]"
        }
      ]
    },

    "mappings": {
      "patterns": [
        {
          "name": "meta.type.mapping.manyleb",
          "begin": "<",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.mapping.begin.manyleb"
            }
          },
          "end": ">",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.mapping.end.manyleb"
            }
          },
          "patterns": [
            { "include": "#types" },
            { "include": "#arrays" },
            { "include": "#mappings" },
            {
              "name": "punctuation.separator.mapping.manyleb",
              "match": ","
            }
          ]
        }
      ]
    },

    "optional": {
      "patterns": [
        {
          "name": "keyword.operator.optional.manyleb",
          "match": "\\?"
        }
      ]
    },

    "routes": {
      "patterns": [
        {
          "name": "string.unquoted.route.manyleb",
          "match": "\"/[^\"\\s]*\""
        }
      ]
    },

    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.property.manyleb",
          "match": "\\b[a-z_][a-z0-9_]*\\b"
        }
      ]
    },

    "braces": {
      "patterns": [
        {
          "name": "punctuation.section.block.begin.manyleb",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.manyleb",
          "match": "\\}"
        }
      ]
    }
  }
}